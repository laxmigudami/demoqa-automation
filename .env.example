# ============================================
# DemoQA Automation Framework Configuration
# ============================================
# Copy this file to .env and customize as needed
# Usage: cp .env.example .env

# ============================================
# Browser Configuration
# ============================================
BROWSER=chrome
# Options: chrome, firefox, edge

HEADLESS=false
# Set to true for headless execution (no browser GUI)
# Options: true, false

# ============================================
# Wait Timeouts (in seconds)
# ============================================
IMPLICIT_WAIT=10
# Default wait time for element presence

EXPLICIT_WAIT=15
# Maximum wait time for explicit waits

PAGE_LOAD_TIMEOUT=60
# Maximum time to wait for page load

# ============================================
# Application URLs
# ============================================
BASE_URL=https://demoqa.com
# Base URL for the DemoQA application

API_BASE_URL=https://demoqa.com/BookStore/v1
# Base URL for API endpoints

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Screenshot Settings
# ============================================
TAKE_SCREENSHOTS=true
# Enable/disable screenshot capture
# Options: true, false

SCREENSHOT_ON_FAILURE=true
# Capture screenshots only on test failures
# Options: true, false

# ============================================
# Retry Configuration
# ============================================
MAX_RETRIES=2
# Maximum number of retry attempts for flaky operations

RETRY_DELAY=2
# Delay (in seconds) between retry attempts
